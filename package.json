{
  "name": "not-safe-not-fair",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "analyse": "ANALYSE=1 webpack",
    "dbclean": "npm run dbdrop && npm run dbcreate && npm run dbmu",
    "dbcreate": "npm run psql -- --dbname postgres -c 'CREATE DATABASE notsafenotfair'",
    "dbdrop": "npm run psql -- --dbname postgres -c 'DROP   DATABASE notsafenotfair'",
    "dbmc": "db-migrate create",
    "dbmu": "db-migrate up",
    "psql": "docker run -it --rm --network=notsafenotfair_default --env-file .env postgres:9.6-alpine psql",
    "start": "webpack && npm run start:db && npm run start:api",
    "start:api": "node .env.js && sam local start-api --docker-network=notsafenotfair_default --env-vars .env.json",
    "start:db": "docker-compose up -d",
    "stop": "npm run stop:db",
    "stop:db": "docker-compose down",
    "webpack": "webpack"
  },
  "author": "aaronjameslang@googlemail.com",
  "license": "MIT",
  "dependencies": {
    "aws-sam-local": "^0.2.8",
    "aws-serverless-express": "^3.1.3",
    "db-migrate": "^0.10.6",
    "db-migrate-pg": "^0.3.1",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "pg": "^7.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "cache-loader": "^1.2.0",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-inline-source-plugin": "0.0.9",
    "html-webpack-plugin": "^2.30.1",
    "muicss": "^0.9.36",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.10.0",
    "webpack-dev-server": "^2.11.1"
  }
}
